server {
        server_name <%= @domain %>;
        root /var/www/phpldapadmin/htdocs;
 
        location / {
                index index.php;
        }
 
        location ~ \.php$ {
                include fastcgi_params;
                fastcgi_index index.php;
                fastcgi_param SCRIPT_FILENAME $document_root/$fastcgi_script_name;
                fastcgi_pass <%= php5_fpm_socket %>;
        }
}
